{
  "name": "qontak-client",
  "version": "1.0.0",
  "description": "A NodeJS SDK for interacting with the Mekari Qontak API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build",
    "ci": "npm ci && npm test && npm run build",
    "version": "npm run build && git add -A dist",
    "prepublishOnly": "npm test && npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "qontak",
    "mekari",
    "whatsapp",
    "api",
    "sdk",
    "typescript"
  ],
  "author": "Mekari Engineering",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mekari-engineering/qontak-api-js.git"
  },
  "bugs": {
    "url": "https://github.com/mekari-engineering/qontak-api-js/issues"
  },
  "homepage": "https://github.com/mekari-engineering/qontak-api-js#readme",
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
